<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Publisher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.description %></td>
    <td>
      <% if book.publisher.nil? then %>
       <i>None selected</i>
      <% else %>
        <%= book.publisher.name %>
      <% end %>
    </td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

